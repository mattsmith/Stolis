= form_for @quiz do |f|
  -if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg
  
  = f.fields_for(:answers) do |f_answer|
  
    %label.btn-group{for: f_answer.object.id, :"data-toggle" => "buttons-radio" } 
      = f_answer.object.question.prompt
      %br
      %label.radio.btn
        = f_answer.object.question.choice_1
        = f_answer.radio_button :choice, f_answer.object.question.choice_1
      %label.radio.btn
        = f_answer.object.question.choice_2
        = f_answer.radio_button :choice, f_answer.object.question.choice_2
      %label.radio.btn
        = f_answer.object.question.choice_3
        = f_answer.radio_button :choice, f_answer.object.question.choice_3
    
  = f.label :email
  = f.email_field :email

  .actions
    = f.submit 'Save', class: "btn btn-success btn-large"
    
:javascript
  $(".radio.btn").button();
